<%- include('partials/header'); -%>

    <h1><%= post.postTitle %></h1>
    <p><%= post.postContent %></p>
    <hr />
    <h5><%= post.comments.length %> Responses To "<%= post.postTitle %>"</h5>

    <% post.comments.forEach(function(comment){ %>

    <hr />
    <h5><%= comment.by %></h5>
    <h6><%= comment.createdAt %></h6>
    <p><%= comment.comment%></p>
    <% }) %>
    <script type="text/javascript">
      function showCommentBox() {    
            document.getElementById("commentform").style.display = "block";
        }
    </script>

    <a onclick=showCommentBox()> <h5>Leave a reply</h5></a>
    <form id="commentform" action="/post/<%= post._id %>" method="post">
      <div class="form-group">
        <label>Name</label>
    
        <input type="text" class="form-control" name="by" />
      </div>
      <div class="form-group">
        <label>message</label>
        <textarea class="form-control" name="comment" rows="1"></textarea>
      </div>
    
      <button type="submit" name="button" class="btn btn-primary">Publish</button>
    </form>
  <%- include('partials/footer'); -%>

